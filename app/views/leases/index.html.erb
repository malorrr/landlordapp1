<h1>Leases</h1>

<table id="hor-minimalist-b">
  <tr>
    <th>Tenant</th>
    <th>Property</th>
    <th>Lease start</th>
    <th>Lease end</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @leases.each do |lease| %>
  <tr>
    <td>

<% @tenants.each do |tenant| %>
<%  if tenant.id == lease.tenant_id  %>
<%=tenant.name%>
<% end %>
<% end %>

</td>
    <td>

<% @properties.each do |property| %>
<%  if property.id == lease.property_id  %>
<%=property.address_line_1%>
<% end %>
<% end %>


</td>
    <td><%= lease.lease_start %></td>
    <td><%= lease.lease_end %></td>
    <td><%= link_to 'Show', lease %></td>
    <td><%= link_to 'Edit', edit_lease_path(lease) %></td>
    <td><%= link_to 'Destroy', lease, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>




